{
	"type": "module",
	"scripts": {
		"dev": "node build.js --watch",
		"build": "node build.js",
		"lint": "biome ci .",
		"fix": "biome check --fix .",
		"typecheck": "tsc",
		"gallery:html": "cross-env NOTEBOOKS_DIR=external/jupyter-notebooks/notebooks OUT_DIR=docs/source/gallery/gallery hatch run node scripts/generate-html-gallery.cjs",
		"gallery:notebooks": "cross-env NOTEBOOKS_DIR=examples OUT_DIR=examples node scripts/generate-notebook-gallery.cjs",
		"gallery:docs": "cross-env OUT_DIR=docs/source/gallery npm run gallery:html",
		"gallery:sync-notebooks": "node scripts/sync-gallery-notebooks.mjs",
		"notebooks:clean": "${PYTHON:-python3} ./scripts/clean-notebooks.py ./examples",
		"test:e2e:prepare": "hatch run node scripts/prepare-e2e.cjs",
		"test:e2e": "npm run test:e2e:prepare && playwright test",
		"test:e2e:clean": "node scripts/clean-generated-html.cjs",
		"check": "biome check .",
		"check:fix": "biome check . --write"
	},
	"dependencies": {
		"@anywidget/types": "^0.2.0",
		"@niivue/niivue": "^0.67.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@playwright/test": "^1.57.0",
		"@types/node": "^25.0.3",
		"cross-env": "^10.1.0",
		"esbuild": "^0.27.0",
		"typescript": "^5.8.2"
	}
}
